<root>
	<!-- Target scanner. -->
	<!-- Сканер цели. -->
	<targetScanner>
		<enabled>True</enabled>
		<!-- Target scan mode. -->
		<!-- Режим сканирования. -->
		<scanMode>
			<!-- Enables normal target to be accounted. -->
			<!-- Разрешает использование обычного режима сканирования. -->
			<useNormalMode>True</useNormalMode>
			<!-- Enables XRay target scan module to be used. -->
			<!-- Разрешает использование рентгена для поиска целей. -->
			<useXRayMode>False</useXRayMode>
			<!-- Enables BoundingBox target scan module to be used. -->
			<!-- Разрешает использование BoundingBox сканера для поиска целей. -->
			<useBBoxMode>False</useBBoxMode>
			<!-- Enables BoundingEllipse target scan module to be used. -->
			<!-- Разрешает использование BoundingEllipse сканера для поиска целей. -->
			<useBEpsMode>False</useBEpsMode>
			<!-- Maximum target distance. Not affects on Normal scanner. -->
			<!-- Максимальная дистанция сканирования. Не влияет на обычный режим сканирования. -->
			<maxDistance>720.0</maxDistance>
			<!-- Bounds multiplier for Bounding scanners. -->
			<!-- Множитель размера для Bounding сканеров. -->
			<boundsScalar>2.0</boundsScalar>
			<!-- Target auto scan interval. -->
			<!-- Интервал автоматического сканирования цели. -->
			<autoScanInterval>0.04</autoScanInterval>
			<!-- When this time passes since target last time under crosshairs, target (auto scanned) is deprecated. -->
			<!-- Время устаревания цели с момента ее последнего попадания в прицел (для автоматического сканера). -->
			<autoScanExpiryTime>5.0</autoScanExpiryTime>
		</scanMode>
		<!-- Automatic scanner settings. -->
		<!-- Настройки автоматического сканера. -->
		<autoScan>
			<enabled>True</enabled>
			<activated>True</activated>
			<shortcut>
				<key>KEY_LCONTROL+KEY_X</key>
				<switch>True</switch>
				<invert>False</invert>
			</shortcut>
			<message>
				<onActivate>#AdvancedAimingSystem:targetScanner/autoScan/onActivate;</onActivate>
				<onDeactivate>#AdvancedAimingSystem:targetScanner/autoScan/onDeactivate;</onDeactivate>
			</message>
		</autoScan>
		<!-- Manual target override. It will never be deprecated and could be changed or dropped only by player. -->
		<!-- Ручная перегрузка цели. Цель не устаревает и может быть изменена или сброшена только игроком. -->
		<manualOverride>
			<enabled>False</enabled>
			<key>KEY_T</key>
		</manualOverride>
	</targetScanner>
	<!-- Sniper mode for artillery. -->
	<!-- Снайперский режим для артиллерии. -->
	<sniperModeSPG>
		<enabled>False</enabled>
		<key>KEY_E</key>
	</sniperModeSPG>
	<!-- Automatic aim settings. -->
	<!-- Настройки автоприцела. -->
	<autoAim>
		<!-- Enables real time scanning result substitution while locking on target. -->
		<!-- Разрешает подстановку результата сканирования в реальном времени при захвате цели. -->
		<useTargetScan>False</useTargetScan>
		<!-- Enables TargetInfo substitution while locking on target. -->
		<!-- Разрешает подстановку TargetInfo при захвате цели. -->
		<useTargetInfo>False</useTargetInfo>
	</autoAim>
	<!-- Radial menu settings. -->
	<!-- Настройки радиального меню. -->
	<radialMenu>
		<!-- Enables TargetInfo substitute when radial menu has empty target. -->
		<!-- Разрешает подстановку TargetInfo при пустой цели в радиальном меню. -->
		<useTargetInfo>False</useTargetInfo>
	</radialMenu>
	<!-- Expert perk settings. -->
	<!-- Настройки перка "Эксперт". -->
	<expertPerk>
		<enabled>False</enabled>
		<cacheExtrasInfo>True</cacheExtrasInfo>
		<replyTimeout>5.0</replyTimeout>
		<cacheExpiryTime>60.0</cacheExpiryTime>
	</expertPerk>
</root>
